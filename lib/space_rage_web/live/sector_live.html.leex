<three-game>
  <space-scene>
    <three-ambient-light intensity="0.1"></three-ambient-light>
    <three-directional-light intensity="0.8"></three-directional-light>

    <%= if assigns[:players] do %>
      <%= for {_id, %{position: {x, y, z}}} <- assigns[:players] do %>
        <three-gltf-asset position="<%= x %> <%= y %> <%= z %>" url="/assets/models/spaceship/spaceship.gltf"></three-gltf-asset>
      <% end  %>
    <% end  %>

    <three-orbit-controls></three-orbit-controls>
  </space-scene>
</three-game>
